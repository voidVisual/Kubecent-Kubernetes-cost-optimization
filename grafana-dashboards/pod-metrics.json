{
  "dashboard": {
    "uid": "pod-metrics",
    "title": "Pod Metrics",
    "tags": ["kubernetes", "pods"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "type": "graph",
        "title": "Pod CPU Usage",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{container!=\"POD\",container!=\"\"}[5m])) by (pod, namespace)",
            "legendFormat": "{{namespace}}/{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "CPU Cores"
          }
        ]
      },
      {
        "id": 2,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "type": "graph",
        "title": "Pod Memory Usage",
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{container!=\"POD\",container!=\"\"}) by (pod, namespace)",
            "legendFormat": "{{namespace}}/{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "label": "Memory"
          }
        ]
      },
      {
        "id": 3,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "type": "graph",
        "title": "Pod Network I/O",
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total[5m])) by (pod, namespace)",
            "legendFormat": "RX: {{namespace}}/{{pod}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total[5m])) by (pod, namespace)",
            "legendFormat": "TX: {{namespace}}/{{pod}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "Bps",
            "label": "Network"
          }
        ]
      },
      {
        "id": 4,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "type": "table",
        "title": "Pod Resource Limits",
        "targets": [
          {
            "expr": "kube_pod_container_resource_limits{resource=\"cpu\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        },
        "type": "table",
        "title": "Pod Status Details",
        "targets": [
          {
            "expr": "kube_pod_info",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "type": "graph",
        "title": "Pod Restart Count",
        "targets": [
          {
            "expr": "sum(kube_pod_container_status_restarts_total) by (pod, namespace)",
            "legendFormat": "{{namespace}}/{{pod}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "type": "stat",
        "title": "Running Pods",
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Running\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      }
    ]
  },
  "overwrite": true
}
